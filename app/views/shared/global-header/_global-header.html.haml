.global-header
  .container
    %ul.service-menu
      %li.service-menu__index
        サービス一覧
      %li.service-menu__link
        楽チン♪「詰めるだけグラタン」
    %ul.global-menu
      %li.global-menu__ps-link
        プレミアムサービス
      %li.global-menu__new-register-link
      - if user_signed_in?
        = current_user.email
      - else
        = link_to 'ユーザー登録(無料)', new_user_registration_path
      %li.global-menu__login-link
      - if user_signed_in?
        = link_to 'ログアウト', destroy_user_session_path
      - else
        = link_to 'ログイン', new_user_session_path
